<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="ningenme.net.api.repository.mysql.mapper.GenreMapper">
    <resultMap id="GenreDto" type="ningenme.net.api.repository.dto.GenreDto">
        <id property="genreId" column="genre_id"/>
        <id property="name" column="name"/>
        <id property="label" column="label"/>
        <id property="order" column="order"/>
        <id property="createdTime" column="created_time"/>
        <id property="updatedTime" column="updated_time"/>
        <id property="deletedTime" column="deleted_time"/>
    </resultMap>
    <select id="select" resultMap="GenreDto">
        SELECT * FROM genre
        <where>
            <if test="genreId != null">
                AND genre_id = #{genreId}
            </if>
            <if test="true">
                AND deleted_time IS NULL
            </if>
        </where>
    </select>
</mapper>